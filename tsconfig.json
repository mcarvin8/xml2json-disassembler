{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "@src/*": ["./src/*"],
    },
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"],
}
